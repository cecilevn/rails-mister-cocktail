<div class="col-sm-6 col-sm-offset-3">
  <div class="text-center">
  <h1>Nouvel ingrédient</h1>
  </div>

  <%= simple_form_for [@cocktail, @dose] do |f| %>
    <%= f.association :ingredient %>
    <%= f.input :description, label: "Quantity" %>
    <div class="text-center">
    <%= f.submit "Rajouter l'ingrédient", class: "btn btn-success" %>
    </div>
  <% end %>
</div>

<div class="text-center">
  <hr>
  <%= link_to "Revenir au cocktail #{@cocktail.name}", cocktail_path(@cocktail.id), class: "btn btn-success"%>
</div>

