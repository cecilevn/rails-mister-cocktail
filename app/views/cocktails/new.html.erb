<div class="col-sm-6 col-sm-offset-3">
  <div class="text-center">
  <h1>Nouveau cocktail</h1>
  </div>

  <%= simple_form_for @cocktail do |f| %>
    <%= f.input :name, error: 'Tu peux mieux faire comme nom!'  %>
        <div class="text-center">
    <%= f.submit "Créer ce cocktail", class: "btn btn-success" %>
        </div>
  <% end %>
</div>

<div class="text-center">
  <hr>
  <%= link_to "Revenir à la liste des cocktails", root_path, class: "btn btn-success"%>
</div>
